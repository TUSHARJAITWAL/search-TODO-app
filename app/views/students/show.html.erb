<div class="card mb-3 my-4" style="max-width: 800px; margin-left:300px; background-color:#d5f5f4;">
  <div class="row g-0 py-5">
    <div class="col-md-4">
      <img src="https://static.thenounproject.com/png/2410970-200.png" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-4">
      <div class="card-body">
        <h5 class="card-title"><strong>Name :--</strong><%= @student.full_name %></h5>
        <p class="card-text"><strong>Email      : -- </strong><%= @student.email %></p>
        <p class="card-text"><strong>DOB :- </strong><%= @student.date_of_birth.strftime('%a %b %d %Y') %></p>
        <p class="card-text"><strong>Age     : -- </strong><%= @student.age_student %></p>
        <p class="card-text"><strong>Contact      : -- </strong><%= @student.contact %></p>
        <p class="card-text"><strong>Address      : -- </strong><%= @student.address %></p>

        <a><%= link_to 'Back', students_path, class: "btn btn-outline-danger me-3" %></a>
        <a><%= link_to 'Edit', edit_student_path, class: "btn btn-outline-danger" %></a>
        </div>
    </div>
  </div>
</div>
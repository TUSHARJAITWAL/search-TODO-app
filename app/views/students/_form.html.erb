<div class="container pb-3" style="background-color:#d5f5f4; ">
    <%= form_with model: student do |form| %>
        <% if @student.errors.any? %>
            <% @student.errors.full_messages.each do |messages| %>
                <p><%= messages %></p>
            <%end%>
        <%end%>

        <div class:"form-group mb-3">
        <%= form.label :first_name %> <br>
        <%= form.text_field :first_name ,class:"form-control" %>
        </div><br>
        
        <div class:"form-group">
        <%= form.label :last_name %><br>
        <%= form.text_field :last_name,class:"form-control" %>
        </div><br>
        
        <div class:"form-group">
        <%= form.label :email %><br>
        <%= form.text_field :email,class:"form-control" %>
        </div><br>

        <div class:"form-group">
        <%= form.label :date_of_birth %><br>
        <%= form.date_field :date_of_birth,class:"form-control" %>
        </div><br>

        <div class:"form-group">
        <%= form.label :contact %><br>
        <%= form.text_field :contact,class:"form-control" %>
        </div><br>

        <div class:"form-group">
        <%= form.label :address %><br>
        <%= form.text_field :address,class:"form-control" %>
        </div><br>

        <div>
        <%= form.submit class: "btn btn-dark me-2" %>  <%= link_to "Back", students_path ,class: "btn btn-dark" %> 
        </div>
        <% end %> 
        
</div>